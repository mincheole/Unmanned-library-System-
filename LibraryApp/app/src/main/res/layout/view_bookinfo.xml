<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookInfo">

    <ImageView
        android:id="@+id/BookImage"
        android:layout_width="182dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/BookTitle"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/auto_top"
        android:layout_marginTop="16dp"
        android:text="tv_제목"
        app:layout_constraintStart_toEndOf="@+id/BookImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Author"
        android:layout_width="132dp"
        android:layout_height="25dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:text="tv_저자"
        app:layout_constraintStart_toEndOf="@+id/BookImage"
        app:layout_constraintTop_toBottomOf="@+id/BookTitle" />

    <TextView
        android:id="@+id/Publisher"
        android:layout_width="133dp"
        android:layout_height="24dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="32dp"
        android:text="tv_출판사"
        app:layout_constraintStart_toEndOf="@+id/BookImage"
        app:layout_constraintTop_toBottomOf="@+id/Author" />

    <Button
        android:id="@+id/btn_findLocation"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:text="위치보기"
        app:layout_constraintStart_toEndOf="@+id/BookImage"
        app:layout_constraintTop_toBottomOf="@+id/Publisher" />

    <TextView
        android:id="@+id/Summary"
        android:layout_width="330dp"
        android:layout_height="300dp"
        android:layout_marginStart="@dimen/auto_left"
        android:layout_marginTop="@dimen/auto_top"
        android:layout_marginEnd="@dimen/auto_right"
        android:padding="10dp"
        android:text="tv_책 소개"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BookImage"
        android:background="@drawable/view_edge"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="제 목"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/BookImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="저 자"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/BookImage"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="출판사"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/BookImage"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/auto_left"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:text="책 소개"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Summary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BookImage" />

</androidx.constraintlayout.widget.ConstraintLayout>